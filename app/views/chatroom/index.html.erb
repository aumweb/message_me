<h4 class="ui center aligned icon header">
  <i class="circular red users icon"></i>
  Friends say something...
</h4>

<div class="ui grid">
  <div class="ten wide column">
  	<div class="ui fluid raised card chatbox">
  	  
  	  <div class="content" id="messages">
  	    
  	    <div class="ui feed" id="userchat">
          <%= render @messages %>
  	    </div>
  	  </div>
  	  <div class="extra content">
  	    <%= form_for(@message, html: {class: "ui reply form",role: "form"},url:message_path, remote: true) do |f| %>
  	        <div class="field">
  	        	<div class="ui fluid icon input">
                <%= f.text_field :body %>
  	        		<%= f.button '<i class="icon inverted red edit"></i>'.html_safe %>
  	        		
  	        	</div>
  	        </div>
  	        
  	      <% end %>
  	  </div>
  	</div>
  </div>
  <div class="four wide column">
  	<div class="ui fluid raised card chatbox">
  	  <div class="content">
  	  	<div class="ui inverted vertical menu">
          <%= render @users %>
  	  	  
  	  	</div>
  	  </div>
  	</div>
  </div>
</div>