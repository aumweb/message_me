<h4 class="ui center aligned icon header">
  <i class="circular red shutdown icon"></i>
  Login to continue
</h4>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
    <%= form_for(:session, html: {class: 'ui form',role: "form"}, url: login_path, :method => "post") do |f| %>
      <div class="ui form">
        <div class="field">
          <label>Username</label>
          <div class="ui left icon input">
            <input type="text" placeholder="Username" name="username">
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui left icon input">
            <input type="password" name="password">
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Log in", class: "ui red submit button" %>
      </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= link_to 'Sign Up &nbsp;<i class="signup icon"></i>'.html_safe , signup_path,class: "ui big red button" %>
    </div>

  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>