<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "ui form", local: true) do |f| %>

      <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: "Enter a username" %>
        </div>

        <div class="field">
          <%= f.label :email%>
          <div class="col-10"> 
            <%= f.email_field :email, placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <div class="col-10"> 
            <%= f.password_field :password, placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "ui primary basic button") %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>