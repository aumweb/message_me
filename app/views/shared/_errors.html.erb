<% if obj.errors.any? %>
<div class="ui negative message">
  <i class="close icon"></i>
  <div class="header">
    The following errors prevented the <%= obj.class.name.downcase %> from being saved
  </div>
  <% obj.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
</div>
<% end %>